</header>

<main class="auth-container">
    <h1>Вход</h1>

<% if (typeof error !== "undefined") { %>
    <p class="error"><%= error %></p>
<% } %>

<form action="/login" method="POST" class="auth-form">
    <input
        type="email"
        name="email"
        placeholder="Email"
        required
        pattern=".+@.+\.(com|ru)">

    <input
        type="password"
        name="password"
        placeholder="Пароль"
        required
        minlength="8">

    <button type="submit">Войти</button>
</form>

</main>

<script>
function toggleMenu() {
    document.getElementById("menu").classList.toggle("active");
}
</script>

